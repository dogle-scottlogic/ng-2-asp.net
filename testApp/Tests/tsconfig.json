{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "./js",
    "removeComments": false,
    "sourceMap": true,
    "target": "es5"
  },
  "typeRoots": [
    "../node_modules/@types"
  ],
  "exclude": [
    "../typings/browser.d.ts",
    "../typings/browser",
    "../node_modules"
  ],
  "compileOnSave": false
}